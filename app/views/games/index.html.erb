<h1>Games</h1>

<% if @games.empty? %>
  <h2>No Games Found</h2>
<% else %>
  <table>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game['title'] %></td>
          <td><%= link_to 'Edit', edit_game_path(game['id']) %></td>
          <td><%= link_to 'Delete', game_path(game['id']), class: 'delete-item',method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'Add New Game', new_game_path %>
